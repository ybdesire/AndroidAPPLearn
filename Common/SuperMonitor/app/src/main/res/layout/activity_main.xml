<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.personal.ybdesire.supermonitor.MainActivity">

    <TextView
        android:id="@+id/rootinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooted"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manufacturer"
        android:id="@+id/manufacturer"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rootinfo"
        android:layout_alignLeft="@+id/devicetype"
        android:layout_alignStart="@+id/devicetype" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Type"
        android:id="@+id/devicetype"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/manufacturer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC address"
        android:id="@+id/macaddr"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/devicetype"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android OS version"
        android:id="@+id/osver"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/devicetype"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Security"
        android:id="@+id/btn_sys_sec"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/osver"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
